{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "l10n-scrapper",
  "version": "0.1.0",
  "identifier": "com.vehanhemsara.l10n-scrapper",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "L10n Scanner",
        "width": 1200,
        "height": 800,
        "transparent": true,
        "decorations": true,
        "shadow": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
